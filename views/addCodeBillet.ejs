<div class="page-header">

    <h1>BREST 2016</h1>
</div>
<div class="col-md-6">
	<h2>Codes disponibles</h2>

	<div ng-repeat="o in optionss" class="row option_row">
  		<div class="col-md-6">{{o.titre}} - {{o.description}}</div> 
      <div class="col-md-6"><a class="btn-suppr" href="#" ng-click="deleteOption($index)">Supprimer <span class="glyphicon glyphicon-trash"></span></a></div>
	</div>
</div>
<div class="col-md-6">
	<h2>Ajouter un code billet </h2>
	
	<form ng-submit="addCode()" style="margin-top:30px;">

		<div class="form-group">
			<input type="text" class="form-control" placeholder="Numero" ng-model="code_billet" ng-required="true">
			<input type="checkbox" ng-model="checkboxes" ng-change="addCheckBillet(o._id)" id="{{o._id}}" >
		</div>
		<button type="submit" class="btn btn-primary">Ajouter</button>
		<div ng-show="error" class="alert alert-danger">
	  		<strong>ERREUR</strong> - {{error}}
		</div>

	</form>
</div>